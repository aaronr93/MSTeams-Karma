{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.3/MicrosoftTeams.schema.json",
  "manifestVersion": "1.3",
  "version": "1.0.0",
  "id": "00000000-0000-0000-0000-000000000000",
  "packageName": "com.silverchair.arosenberger.msteams-karma",
  "developer": {
    "name": "Aaron Rosenberger",
    "websiteUrl": "https://github.com/aaronr93/MSTeams-Karma",
    "privacyUrl": "https://github.com/aaronr93/MSTeams-Karma",
    "termsOfUseUrl": "https://github.com/aaronr93/MSTeams-Karma"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "karma",
    "full": "karma"
  },
  "description": {
    "short": "Karmabot for MSTeams",
    "full": "Inspired by the late HipChat's version. Send and receive \"fake internet points\" in the form of a karma score. For use with Silverchair only."
  },
  "accentColor": "#005776",
  "bots": [
    {
      "botId": "00000000-0000-0000-0000-000000000000",
      "scopes": [
        "team",
        "personal",
        "groupchat"
      ],
      "commandLists": [
        {
          "scopes": [
            "personal"
          ],
          "commands": [
            {
              "title": "get top users",
              "description": "Get the highest-scoring users."
            },
            {
              "title": "get top things",
              "description": "Get the highest-scoring things."
            },
            {
              "title": "get bottom users",
              "description": "Get the lowest-scoring users."
            },
            {
              "title": "get bottom things",
              "description": "Get the lowest-scoring things."
            },
            {
              "title": "help",
              "description": "Get help with giving karma."
            }
          ]
        },
        {
          "scopes": [
            "team"
          ],
          "commands": [
            {
              "title": "get top users",
              "description": "Get the highest-scoring users."
            },
            {
              "title": "get top things",
              "description": "Get the highest-scoring things."
            },
            {
              "title": "get bottom users",
              "description": "Get the lowest-scoring users."
            },
            {
              "title": "get bottom things",
              "description": "Get the lowest-scoring things."
            },
            {
              "title": "help",
              "description": "Get help with giving karma."
            }
          ]
        }
      ],
      "supportsFiles": false,
      "isNotificationOnly": false
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "arosenberger-msteams-karma.*.azure.com",
    "arosenberger-msteams-karma.azurewebsites.net"
  ]
}